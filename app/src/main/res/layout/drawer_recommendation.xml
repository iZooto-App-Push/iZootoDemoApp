<?xml version="1.0" encoding="utf-8"?>
<com.outbrain.OBSDK.Viewability.OBFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/outbrain_rec_container">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/outbrain_classic_recommendation_view_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/outbrain_white_color"
            android:clickable="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@color/outbrain_classic_recommendation_background"
                android:clickable="false"
                android:orientation="horizontal"
                android:padding="10dp">

                <FrameLayout
                    android:id="@+id/outbrain_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/outbrain_rec_image_view"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>

                    <ImageView
                        android:id="@+id/outbrain_rec_disclosure_image_view"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:paddingTop="2.5dp"
                        android:paddingRight="2.5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="top|right"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/outbrain_layouts_title_text_label"
                        style="@style/LayoutsDemoTitleTextView"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/outbrain_layouts_author_text_label"
                        style="@style/LayoutsDemoAuthorTextView"
                        android:clickable="false" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</com.outbrain.OBSDK.Viewability.OBFrameLayout>


