<?xml version="1.0" encoding="utf-8"?>
<com.ironsource.mediationsdk.ads.nativead.NativeAdLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/native_ad_layout"
    android:background="@color/iz_gray"
    android:layout_margin="@dimen/margin_10dp"
    android:contentDescription="@string/com_ironsource_mediationsdk_ads_nativeadlayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Badge (Optional) -->
        <TextView
            android:id="@+id/badge_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sponsored"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone"/>

        <!-- Main Content Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- App Icon -->
            <ImageView
                android:id="@+id/ad_app_icon_i"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"/>

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_title_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

<!--                <TextView-->
<!--                    android:id="@+id/ad_body"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textSize="14sp"-->
<!--                    android:textColor="@android:color/darker_gray"-->
<!--                    android:maxLines="2"-->
<!--                    android:ellipsize="end"/>-->
            </LinearLayout>

        </LinearLayout>

        <!-- Media View (If applicable) -->
        <com.ironsource.mediationsdk.ads.nativead.LevelPlayMediaView
            android:id="@+id/ad_media_i"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"/>

        <!-- CTA Button -->
        <Button
            android:id="@+id/ad_call_to_action_i"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Install"
            android:textSize="14sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</com.ironsource.mediationsdk.ads.nativead.NativeAdLayout>
