<?xml version="1.0" encoding="utf-8"?>
<com.k.deeplinkingtesting.utils.GridViewItemLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    android:gravity="top|left"
    android:layout_gravity="fill">

    <ImageView
        android:id="@+id/outbrain_grid_layouts_container_image_view"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/outbrain_grid_layouts_container_title_text_label"
        style="@style/LayoutsDemoTitleTextView"
        android:layout_width="wrap_content"
        android:layout_below="@id/outbrain_grid_layouts_container_image_view"/>

    <TextView
        android:id="@+id/outbrain_grid_layouts_container_description_text_label"
        style="@style/LayoutsDemoAuthorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/outbrain_grid_layouts_container_title_text_label"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>

</com.k.deeplinkingtesting.utils.GridViewItemLayout>
