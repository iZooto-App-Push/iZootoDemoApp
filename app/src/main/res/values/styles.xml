    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemes" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="LayoutsDemoBulletTextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/outbrain_title_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">&#8226;</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LayoutsDemoTitleTextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/outbrain_title_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LayoutsDemoAuthorTextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/outbrain_publisher_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">3</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ArticleViewTextView">
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/article_text_view_color</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/izooto_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
