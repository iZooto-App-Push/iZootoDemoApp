<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Top Banner View -->
        <FrameLayout
            android:id="@+id/topBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            />

        <!-- Bottom Banner View -->
        <RelativeLayout
            android:id="@+id/bottomBanner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#E0E0E0"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp" />

        <!-- Button to Show Top Banner -->
        <Button
            android:id="@+id/loadTopBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_top_banner"
            android:layout_below="@id/topBanner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <!-- Button to Show Bottom Banner -->
        <Button
            android:id="@+id/loadBottomBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_bottom_banner"
            android:layout_above="@id/bottomBanner"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

        <!-- Button to Hide Top Banner -->
        <Button
            android:id="@+id/hideTopBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hide_top_banner"
            android:layout_below="@id/loadTopBanner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <!-- Button to Hide Top Interstitial -->
            <Button
                android:id="@+id/interstitialAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/load_interstitial"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />


            <!-- Button to Hide Top rewarded -->
            <Button
                android:id="@+id/rewardedAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/load_rewarded"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/interstitialAd"
                android:layout_marginTop="16dp" />

        </RelativeLayout>

        <!-- Button to Hide Bottom Banner -->
        <Button
            android:id="@+id/hideBottomBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hide_bottom_banner"
            android:layout_above="@id/loadBottomBanner"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>









